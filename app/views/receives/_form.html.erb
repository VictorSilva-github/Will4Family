<div class="container form-container">

  <% if receive.id.present?%>
    <h2> <%= receive.name %>'s information</h2>
  <% else %>
    <h2>Add a new recipient</h2>

    <%# PARA FINS DIDATICOS %>
    <%#params[:message] %>
    <%= @message.id %>
  <% end %>

  <%= simple_form_for(receive) do |f| %>

    <%= f.input :name, label: "name" %>
    <%= f.input :email, label: "email" %>
    <%= f.input :relationship, label: "relationship" %>
    <%= f.input :phone_number, label: "Phone Number" %>
    <%= f.input :additional_info, label: "additional Info" %>
    <% if @message.present? %>
    <%# if @receive.id.blank? %>
      <%= f.input :message_id, :as => :hidden, :input_html => { value: @message.id } %>
    <% end %>
    <%= f.submit receive.id.present? ? "Save" : "Add new recipient",  class: "btn btn-last" %>

  <% end %>

</div>
