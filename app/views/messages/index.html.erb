<h1 class="padding">My messages</h1>

  <% if @messages.any? %>
  <div class="w-50">
    <% @messages.each do |message| %>
      <div class="card m-2 bg-black">
        <%= link_to message_path(message), style: "text-decoration: none;" do %>
          <div class="card-body">
            <h2 class="card-title" style="color: white;"><%= message.message_type %></h2>
            <p class="card-text bold-text large-text" style="color: white;">User Checking: <%= message.user_cheking %></p>
            <p class="card-text bold-text large-text" style="color: white;">Programmed Date: <%= message.ultimate_date %></p>
            <p class="card-text bold-text large-text" style="color: white;">Within: <%= message.tolerance_days %></p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="jumbotron text-center">
    <h1 class="display-4">No Activities</h1>
    <p class="lead">You don't have any messages yet.</p>
    <%= link_to "+", new_message_path, class: "btn btn-success btn-lg btn-attention", role: "button" %>
  </div>
<% end %>
