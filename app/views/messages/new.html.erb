<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h3>Create a new message</h3>
      <%= simple_form_for @message do |f| %>
        <%= f.input :message_type, collection: Message.message_types.keys, prompt: "Select a message type" %>
        <%= f.input :description %>
        <%= f.input :user_cheking %>

        <%# f.input :last_checking_at, as: :date_select %>
        <%# f.label :last_checking_at %>
        <%# f.date_select :last_checking_at %>
        <%= f.input :last_checking_at, as: :string, wrapper: :date, input_html: {value: I18n.l(f.object.date)} %>

        <%= f.input :tolerance_days %>
        <%= f.input :ultimate_date, as: :date_select %>
        <%= f.input :user_id, collection: User.pluck(:email, :id), prompt: "Select a user" %>
        <%= f.button :submit %>
      <% end %>
    </div>
  </div>
</div>
